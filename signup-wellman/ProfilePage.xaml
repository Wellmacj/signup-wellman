<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="signup_wellman.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout Padding="30" Spacing="20">

        <Label
            x:Name="WelcomeLabel"
            FontSize="18"
            Text="Welcome," />

        <Label x:Name="UsernameLabel" FontAttributes="Bold" FontSize="24" />
        <Label x:Name="EmailLabel" />

        <Label Text="Signup successful!" TextColor="Green" FontAttributes="Italic" />

        <Button Text="Sign Out" Clicked="OnSignOutClicked" />

    </VerticalStackLayout>
</ContentPage>
